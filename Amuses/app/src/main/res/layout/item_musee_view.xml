<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="musee"
            type="com.polytech.amusees.model.Musee" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{musee.name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_region_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{musee.region}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_name_item" />

            <TextView
                android:id="@+id/tv_departement_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{musee.departement}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_region_item" />

            <TextView
                android:id="@+id/tv_postal_code_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{musee.postal_code}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_departement_item" />

            <TextView
                android:id="@+id/tv_city_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{musee.city}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_postal_code_item" />

            <TextView
                android:id="@+id/tv_adress_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{musee.adress}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_city_item" />

            <TextView
                android:id="@+id/tv_phone_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{musee.phone}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_adress_item" />

            <TextView
                android:id="@+id/tv_website_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{musee.website}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_phone_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>