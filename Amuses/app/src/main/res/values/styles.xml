<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="android:background">@color/background</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerCustom</item>
    </style>

    <!-- Button style -->
    <style name="MyButton" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- Title textView -->
    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/kingthings_petrock</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Clickable link textView -->
    <style name="ClickableLinkTextView" parent="Widget.AppCompat.TextView">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- TODO changer des couleurs pour que ce soit mieux -->
    <!-- DatePicker -->
    <style name="DatePickerCustom" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:colorForeground">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>


</resources>
